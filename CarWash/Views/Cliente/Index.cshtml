<!------------------------------------------------- Modals ---------------------------------------------->
<!-- The Modal -->
<div class="modal" id="mdlAddAuto">
    <div class="modal-dialog modal-lg  modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title title-auto">Añadir Auto</h4>
                <h4 class="modal-title title-cita d-none">Añadir Cita</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <!---------------------------------- Crear auto  -------------------------------------------->
                <div class="container-fluid add-car chk-container add-auto ">
                    <h2 class="text-center">Elige tu tipo de auto</h2>
                    <ul>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb1" value="4X4"/>
                            <label class="font-weight-bold text-center" for="cb1">4x4<br /><img src="~/Content/images/carrocerias/4x4.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb2" value="Deportivo"/>
                            <label class="font-weight-bold text-center" for="cb2">Deportivo<br /><img src="~/Content/images/carrocerias/deportivo.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb3" value="Hatch Back" />
                            <label class="font-weight-bold text-center" for="cb3">Hatch Back<br /><img src="~/Content/images/carrocerias/hatch-back.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb4" value="Minivan" />
                            <label class="font-weight-bold text-center" for="cb4">Minivan<br /><img src="~/Content/images/carrocerias/minivan.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb5" value="Pick Up"/>
                            <label class="font-weight-bold text-center" for="cb5">Pick Up <br /><img src="~/Content/images/carrocerias/pick-up.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb6" value="Sedan" />
                            <label class="font-weight-bold text-center" for="cb6">Sedan<br /><img src="~/Content/images/carrocerias/sedan.jpg" width="80" height="80" /></label>
                        </li>
                        <li>
                            <input type="checkbox" class="tipo-auto" id="cb7" value="SUV" />

                            <label class="font-weight-bold text-center" for="cb7">
                                SUV<br /><img src="~/Content/images/carrocerias/suv.jpg" width="80" height="80" />

                            </label>
                        </li>
                    </ul>
                    <div class="container-fluid justify-content-between">
                        <button class="btn btn-primary show-add-citas">Añadir Cita</button>
                        <button class="btn btn-success inset-auto">Crear  Auto</button>
                        
                    </div>
                </div>
                <!---------------------------------- Fin Crear auto-------------------------------------------->
                <!----------------------------------Crear Cita ------------------------------------------->
                <div class="container-fluid add-cita d-none">
                    <div id="stepper1" class="bs-stepper linear">
                        <div class="bs-stepper-header" role="tablist">
                            <div class="step" data-target="#test-l-1">
                                <button type="button" class="step-trigger" role="tab" id="stepper1trigger1" aria-controls="test-l-1" aria-selected="false" disabled="disabled">
                                    <span class="bs-stepper-circle">1</span>
                                    <span class="bs-stepper-label">Auto</span>
                                </button>
                            </div>
                            <div class="bs-stepper-line"></div>
                            <div class="step" data-target="#test-l-2">
                                <button type="button" class="step-trigger" role="tab" id="stepper1trigger2" aria-controls="test-l-2" aria-selected="false" disabled="disabled">
                                    <span class="bs-stepper-circle">2</span>
                                    <span class="bs-stepper-label">Servicio</span>
                                </button>
                            </div>
                            <div class="bs-stepper-line"></div>
                            <div class="step active" data-target="#test-l-3">
                                <button type="button" class="step-trigger" role="tab" id="stepper1trigger3" aria-controls="test-l-3" aria-selected="true">
                                    <span class="bs-stepper-circle">3</span>
                                    <span class="bs-stepper-label">Fecha y Hora</span>
                                </button>
                            </div>
                        </div>
                        <div class="bs-stepper-content">
                            <form onsubmit="return false"  id="frmCitas">
                                <div id="test-l-1" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper1trigger1">
                                    <div class="form-group">
                                        <label for="ddlAutos">Seleccion Tu auto</label>
                                       <select class="form-control" name="ddlAutos" id="ddlAutos" required>
                                           <option>--Selecciona una opción--</option>
                                       </select>
                                    </div>
                                    <button class="btn btn-primary btn-next">Siguiente</button>
                                </div>
                                <div id="test-l-2" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper1trigger2">
                                    <div class="form-group">
                                        <label for="ddlServicios">Selecciona un Servicio</label>
                                        <select class="form-control" name="ddlServicios" id="ddlServicios" required>
                                            <option>--Selecciona una opción--</option>
                                        </select>
                                    </div>
                                    <button class="btn btn-primary btn-previous">Previous</button>
                                    <button class="btn btn-primary btn-next">Siguiente</button>
                                </div>
                                <div id="test-l-3" role="tabpanel" class="bs-stepper-pane text-center active dstepper-block" aria-labelledby="stepper1trigger3">
                                    <div class="form-group">
                                        <label for="txtFecha"> Selecciona la fecha</label>
                                      <input class="form-control" id="txtFecha" type="date" required/>
                                    </div>
                                    <div class="form-group">
                                        <label for="txtHora">Selecciona la hora</label>
                                       <input class="form-control"  id="txtHora" type="time" required/>
                                    </div>
                                    <button class="btn btn-primary mt-5 btn-previous">Anterior</button>
                                    <button type="submit" class="btn btn-primary mt-5 btn-createCitas">Enviar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!----------------------------------------------------------------------------->
            </div>


        </div>
    </div>
</div>
<!------------------------------------------------- End Modals ------------------------------------------>